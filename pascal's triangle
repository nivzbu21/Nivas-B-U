#include<stdio.h>
int main()
{
	int n,line,space;
	printf("Enter number of rows:\n");
	scanf("%d",&n);
	for(int line=1;line<=n;line++)
	{
	for(int space=1;space<=n-line;space++)
	printf(" ");
	int coef=1;
	for(int i=1;i<=line;i++)
	{
		printf("%4d",coef);
		coef=coef*(line-i)/i;
	}
	printf("\n");
}
}
